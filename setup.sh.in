#!/bin/sh

set -e
set -u

URL=
TEMPFILE=$(mktemp -u)
SPACE='                  '

display() {
  lines=$(wc -l "$TEMPFILE" | cut -d ' ' -f 1)
  case $lines in
    0) echo ;;
    1) head -1 $TEMPFILE ;;
    *) echo ; cat $TEMPFILE | sed -e 's/^/  /g'
  esac
}

run() {
  message=$1
  shift
  command="$*"

  echo -ne "> $message...\r"
  eval $command > $TEMPFILE 2>&1 && { echo "✓ $(display)$SPACE"; return 0; } || {
    echo "✕ Error #$?: $(display)$SPACE"
    echo
    echo "Cannot verify $message. Installation cannot continue."
    return 1
  }
}

echo -e "\e[32;1mXP Runners setup\e[0m"
echo "(c) 2016 https://github.com/xp-runners/reference/"
echo

case $(uname) in
  CYGWIN*)
    run 'Cygwin' "uname -a"
    run '.NET Framework installed' "ls $(cygpath -m $WINDIR)/Microsoft.NET/Framework*/*/csc.exe"
    EXE=xp.exe
    ;;

  *)
    run 'Un*x' "uname -a"
    run '.NET Framework installed' "type mono"
    EXE=xp
    ;;
esac

run 'Tar' "type tar"
run 'Curl' "type curl | type wget"

if type curl ; then
  run 'Download' "curl -L https://bintray.com/artifact/download/xp-runners/generic/xp-runners_@VERSION@.tar.gz | tar xvz"
elif type wget ; then
  run 'Download' "wget https://bintray.com/artifact/download/xp-runners/generic/xp-runners_@VERSION@.tar.gz -O - | tar xvz"
fi

run 'Test' "ls -al $(pwd)/$EXE"

echo
echo "Done, runners installed to $(pwd)"
rm "$TEMPFILE"
